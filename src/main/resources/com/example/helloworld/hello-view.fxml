<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.helloworld.HelloController" styleClass="scene-root">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <bottom>
        <!-- Logo -->
        <ImageView styleClass="imageView">
            <image>
                <Image url="https://clipart-library.com/images_k/snake-clipart-transparent/snake-clipart-transparent-1.png" requestedWidth="200" requestedHeight="200" />
            </image>
        </ImageView>
    </bottom>

    <center>
        <!-- Other content -->
        <VBox alignment="CENTER" spacing="20.0">
            <Label fx:id="welcomeText"/>
            <Button text="Start Game" onAction="#onHelloButtonClick" styleClass="button"/>
            <Button text="View History" onAction="#onHelloButtonClick" styleClass="button"/>
            <Button text="Manage Questions" onAction="#onHelloButtonClick" styleClass="button"/>
        </VBox>
    </center>
</BorderPane>
